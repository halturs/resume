<main>
    {{#each navigation.links}}
    <div class="card">
        <div class="card-body">
            <h5>Shop</h5>
            <div class="nav flex-column">
                <div class="nav-item text-end">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
        <br>
        {{#each navigation.logo}}
        <a href="{{logo}}" class="nav-link disabled">{{logo}}</a>
        {{/each}}
    </div>
    {{#with newsBlock}}
    <div class="display-6 text-center">{{title}}</div>
    {{#each newsBlock.cards}}
    <div class="card row">
        <div class="card body col bg-gray">
            <div class="title-text light">{{title}}</div>
            <span class="text light">{{description}}</span>
            <span class="badge text-bg-succes rounded-pill">{{isNew}}</span>
            <span class="badge text-bg-dehger rounded-pill">{{isTop}}</span>
        </div>
    </div>
    {{#each}}
    {{/with}}
    <hr>
    {{#each .tabs}}
    <div class="row">
        <div class="col">
            <div class="nav nav-tabs">
                <div class="nav-item">
                    <span class="nav-link">{{isActive}}</span>
                    <span class="nav-link">{{isDisabled}}</span>
                    <span class="nav-link">{{text}}</span>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <br>
    {{#each goodsBlock.cards}}
    <div class="card row">
        <div class="card-body col">
            <img class="card-image-top">{{image}}</img>
            <div class="card-body bg-light">
                <h6 class="card-title">{{title}}</h6>
                <span class="badge text-bg-warning rounded-pill">{{isHot}}</span>
                <span class="badge text-bg-primary rounded-pill">{{isNew}}</span>
                <p>{{description}}</p>

            </div>
        </div>
    </div>
    {{/each}}
    <hr>
    {{#with subscribe}}
    <div class="card">
        <div class="card-body bg-gray">
            <h2 class="text light">{{header}}</h2>
            <p class="text light">{{description}}</p>
            <button class="btn btn-primary text-end">
                <span class="text primary">{{text}}</span>
                <a href="{{link}}"></a>
            </button>
        </div>
    </div>
    {{/with}}
    <hr>
    {{#with service}}
    <div class="card">
        <div class="card-body bg-success">
            <h2 class="text light text-center">{{title}}</h2>
            <p class="text light text-center">{{description}}</p>
            <button class="btn btn-primary text-center">
                <span class="text primary">{{text}}</span>
                <a href="{{link}}"></a>
            </button>
        </div>
    </div>
    {{/with}}
    <hr>
    {{#each footer}}
    <div class="nav">
        <div class="nav item">
            <a href="{{link}}" class="nav-link">{{text}}</a>
        </div>
    </div>
    {{/each}}
</main>