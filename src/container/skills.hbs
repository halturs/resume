{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#each main}}
    <main>
        <section>
            {{> title data='My hobbies'}}
            <ul>
                {{#each main. skills}}
                <li>
                    {{#if isMain=true}} ("favourite"){{/if}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data='All skills' big=true }}
            <ul>
                {{#each main.skills}}
                <li>
                    {{name}}

                    {{#if point includezero=true}} ({{point}}) {{/if}}
                    {{#if istop}} (top) {{/if}}

                    {{#unless point includeZero=true}} (не учим) {{/unless}}

                    {{#unless point}}
                    {{#if point includezero=true}} (работаем)
                    {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{>title data "All hobbies"}}
            <ul>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMan}} (favorit) {{/if}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/each}}
</div>

